server {
    listen ${NGINX_PORT};
    root /usr/share/nginx/html;
    index index.html;
    
    # Security headers
    add_header X-Frame-Options ${FRAME_OPTIONS};
    add_header X-Content-Type-Options nosniff;
    
    # Serve static files
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Health check
    location /health {
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}